<h2>EDIT YOUR CELEBRITY</h2>

<form action="/celebrities/{{celebrity._id}}" method="post">
    <label for="">Name:</label>
    <input type="text" name="name" value="{{celebrity.name}}">

    <label for="">Occupation:</label>
    <input type="text" name="occupation" value="{{celebrity.occupation}}">

    <label for="">Phrase:</label>
    <input type="text" name="catchPhrase" value="{{celebrity.catchPhrase}}">
    <br>
    <br>
    <h3>Movies Acted:</h3> 
    {{#each movies}}
        <li>{{title}}</li>
        <input type="checkbox" name="moviesActed[]" value="{{_id}}">
    {{/each}}
    <br>
    <br>
    <button type="submit">EDIT</button>
</form>
