<h2>Create a new celebrity</h2>

<form action="/celebrities/new" method="post">
  <label for="">Name:</label>
  <input type="text" name="name">

  <label for="">Occupation:</label>
  <input type="text" name="occupation">

  <label for="">Phrase:</label>
  <input type="text" name="catchPhrase">
  <br>
  <br>
  <h3>Movies Acted:</h3> 
  {{#each movies}}
    <li>{{title}}</li>
    <input type="checkbox" name="moviesActed[]" value="{{_id}}">
  {{/each}}
  <br>
  <br>
  <button type="submit">CREATE</button>
</form>